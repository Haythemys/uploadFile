{% extends 'base.html.twig' %}

{% block title %}Attachement index{% endblock %}

{% block body %}
    <h1>Attachement index</h1>
    <a href="{{ path('app_attachement_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Size (KO)</th>
                <th>File</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        {% for attachement in attachements %}
            <tr>
                <td>{{ attachement.id }}</td>
                <td>{{ attachement.name }}</td>
                <td>{{ attachement.size }}</td>
                <td>{{ attachement.file }}</td>
                <td>{{ attachement.content }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
