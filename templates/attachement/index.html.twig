{% extends 'base.html.twig' %}

{% block title %}Attachement index{% endblock %}

{% block body %}
    <h1>Attachement index</h1>
    <a href="{{ path('app_attachement_new') }}"><h4>Create new</h4></a>
    <br>
    <table border ="1px" width="100%" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Size (KO)</th>
                <th>File</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
        {% for attachement in attachements %}
            <tr>
                <td style="text-align: center;">{{ attachement.id }}</td>
                <td style="text-align: center;">{{ attachement.name }}</td>
                <td style="text-align: center;">{{ attachement.size }}</td>
                <td style="text-align: center;">{{ attachement.file }}</td>
                <td style="text-align: center;"><a href="../uploads/{{ attachement.name }}" target="_blank">View </a> </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
